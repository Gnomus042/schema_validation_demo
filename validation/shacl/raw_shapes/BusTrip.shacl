:BusTrip a sh:NodeShape;
	sh:targetClass schema:BusTrip;
	sh:nodeKind sh:BlankNodeOrIRI;
	sh:property [
		sh:path schema:arrivalBusStop;
		sh:or (
			[sh:node :BusStop]
			[sh:node :BusStation]
		);
	];
	sh:property [
		sh:path schema:busName;
		sh:node :Text;
	];
	sh:property [
		sh:path schema:busNumber;
		sh:node :Text;
	];
	sh:property [
		sh:path schema:departureBusStop;
		sh:or (
			[sh:node :BusStation]
			[sh:node :BusStop]
		);
	].