:LoanOrCredit a sh:NodeShape;
	sh:targetClass schema:LoanOrCredit;
	sh:nodeKind sh:BlankNodeOrIRI;
	sh:property [
		sh:path schema:amount;
		sh:or (
			[sh:node :MonetaryAmount]
			[sh:node :Number]
		);
	];
	sh:property [
		sh:path schema:currency;
		sh:node :Text;
	];
	sh:property [
		sh:path schema:loanTerm;
		sh:node :QuantitativeValue;
	];
	sh:property [
		sh:path schema:requiredCollateral;
		sh:or (
			[sh:node :Text]
			[sh:node :Thing]
		);
	].